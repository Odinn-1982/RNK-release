{{!-- Unhallowed Metropolis Quality/Talent Sheet --}}
<form class="um-item-sheet quality-sheet flexcol" autocomplete="off">
  
  <header class="sheet-header">
    <div class="item-image">
      <img src="{{item.img}}" alt="{{item.name}}" data-edit="img"/>
    </div>
    
    <div class="header-fields">
      <h1 class="item-name">
        <input type="text" name="name" value="{{item.name}}" placeholder="Quality Name"/>
      </h1>
    </div>
  </header>

  <section class="sheet-body">
    
    <div class="quality-details">
      
      <div class="form-group">
        <label>Type</label>
        <select name="system.qualityType">
          <option value="positive" {{#if (eq system.qualityType "positive")}}selected{{/if}}>Positive Quality</option>
          <option value="negative" {{#if (eq system.qualityType "negative")}}selected{{/if}}>Negative Quality</option>
        </select>
      </div>
      
      <div class="form-group">
        <label>Cost</label>
        <input type="number" name="system.cost" value="{{system.cost}}" data-dtype="Number"/>
        <span class="hint">Positive = CP cost, Negative = CP gained</span>
      </div>
      
      <div class="editor-container">
        <label>Description / Effects</label>
        <textarea name="system.description">{{system.description}}</textarea>
      </div>
      
    </div>
    
  </section>
</form>
