{{!-- Unhallowed Metropolis Talent Sheet --}}
<form class="um-item-sheet talent-sheet flexcol" autocomplete="off">
  
  <header class="sheet-header">
    <div class="item-image">
      <img src="{{item.img}}" alt="{{item.name}}" data-edit="img"/>
    </div>
    
    <div class="header-fields">
      <h1 class="item-name">
        <input type="text" name="name" value="{{item.name}}" placeholder="Talent Name"/>
      </h1>
    </div>
  </header>

  <section class="sheet-body">
    
    <div class="talent-details">
      
      <div class="form-group">
        <label>Prerequisites</label>
        <input type="text" name="system.prerequisites" value="{{system.prerequisites}}" placeholder="e.g., Firearms 3, Coordination 3"/>
      </div>
      
      <div class="form-group">
        <label>Action Cost</label>
        <input type="number" name="system.actionCost" value="{{system.actionCost}}" data-dtype="Number" min="0"/>
      </div>
      
      <div class="editor-container">
        <label>Description / Effects</label>
        <textarea name="system.description">{{system.description}}</textarea>
      </div>
      
    </div>
    
  </section>
</form>
